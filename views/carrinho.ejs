<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Carrinho de Compras</title>
</head>

<body class="bg-gray-100 min-h-screen flex justify-center items-center">
  <div class="w-full max-w-4xl bg-white shadow-lg rounded-lg p-6">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Carrinho de Compras</h1>

    <% if (itensCarrinho.length > 0) { %>
    <form action="/carrinho/concluir" method="POST" class="space-y-4">
      <% itensCarrinho.forEach(item => { %>
      <div class="flex items-center justify-between bg-gray-100 p-4 rounded">
        <div>
          <p class="text-lg font-medium text-gray-700"><%= item.Estoque.Produto.nome %></p>
          <p class="text-gray-600">Quantidade: <%= item.quantidadeTotal %></p>
          <p class="text-gray-600">Pre√ßo: R$ <%= item.valorTotal.toFixed(2) %></p>
        </div>
        <input type="checkbox" name="itensCodigo[]" value="<%= item.codigo %>" class="w-5 h-5">
      </div>
      <% }); %>

      <button type="submit"
        class="bg-indigo-600 text-white font-bold py-2 px-6 rounded hover:bg-indigo-700 transition duration-300">
        Concluir Compra
      </button>
    </form>
    <% } else { %>
    <p class="text-gray-600">Nenhum item no carrinho.</p>
    <% } %>

    <a href="/" class="mt-4 text-indigo-500 hover:underline">Voltar para a loja</a>
  </div>
</body>

</html>
